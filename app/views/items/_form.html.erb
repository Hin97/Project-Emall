<%= form_for(@item) do |f| %>
  <%= render 'shared/erroritem_messages', object: @item %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :price %>$
      <%= f.number_field :price, step: :any, placeholder: "In USD" %>

      <%= f.label :author %>
      <%= f.text_field :author %>
            
      <%= f.label :quantity %>
      <%= f.number_field:quantity %>
      
      <%= f.label "Year published" %>
      <%= f.number_field :year, min: 1800, max: Time.now.year %>
      
      <%= f.label :condition %>
      <br>
      <%= f.select(:condition, Item::CONDITION_LIST) %>
      <br></br>
      <%= f.label :description %>
      <%= f.text_area :description ,size: "30x10" %>

      <%= hidden_field_tag "cate_ids[]",nil %>
      <%= f.label "category:" %>         
      <% Category.all.each do |category| %>
      <label class = "checkbox-inline">
      <div class = "checkboxtag">
      <%= check_box_tag "cate_ids[]", category.id, @item.category_ids.include?(category.id) %>
      </div>
      <%= category.name %>
      </label>
      <% end %>
      <br></br>
      <%= f.label "Book Cover" %>
      <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
      
    
    <%= f.submit yield(:button_text), class: "btn btn-success" %>
    <% end %>

    <script type="text/javascript">
  $('#item_image').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
