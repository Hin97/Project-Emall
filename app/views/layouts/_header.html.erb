<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "EMALL", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li>  <%= link_to  raw("<span class='glyphicon glyphicon-asterisk'></span> Register"), signup_path, class: " btn btn-lg btn-success" %></li>
       <!--If logined-->  
        <% if logged_in? %>
          <li><%= link_to "Items", '#' %></li>
          <li class="dropdown">
            <a href="#" class="btn btn-lg btn-primary dropdown-toggle " style="background-color:#FF0000" data-toggle="dropdown">
             <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
          
       <!--If haven't login-->  
        <% else %>
        <li><%= link_to raw("<span class='glyphicon glyphicon-user'></span> Log in"), login_path, class: " btn btn-lg btn-primary" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>