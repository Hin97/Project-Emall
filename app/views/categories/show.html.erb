<% provide(:title, @category.name) %>

<h1><%= @category.name %></h1>
<div class="row">
<div class="col-md-3" >
      <% Category.all.each do |category| %>
      <li class="catdisplay">
      <%= link_to category.name ,category %>
      </li>
      <% end %>
</div>    
    
    
<div class="col-md-9" style="border-left: 1px solid silver;">
<ol class="items">
<% @item.each do |item| %>
<% if item.category_ids.include?(@category.id)%>
<% @count = true %>
<%= render item %>
<% end %>
<% end %>
</ol>
<% if @count == false %>
<h4 style="text-align:center;">There are no books in this category</h4>
<% end %>
</div>
</div>