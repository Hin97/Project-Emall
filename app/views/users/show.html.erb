<% provide(:title, @user.name) %>
<div class="row">
    <section class="user_info">
      <h5> User information</h5>
    </section>
    <!--item class start-->
    <ol class="items">

      <!--row start-->
      <div class="row">
    <!--outside left start-->
      <div class="col-md-3">
      <div style="text-align: center;margin-top:50px;">
      <div style= "margin-left:13px;"><%= gravatar_for @user, size: 150 %></div><br>
      <p3>About seller:</p3><br>
      <p4><%= link_to @user.name, @user %></p4><br>
      
      <p3>Email:</p3><br>
      <p4><%= @user.email %></p4>
      </div>
      <!--outside left end-->
      </div>

      <!--outside right start-->
      <div class="col-md-9" style="border-left: 1px solid silver;">
        
      <h4 style="text-align:center;">Book for sell:</h4>
      <% if @user.items.any? %>
      <!--<ol class="items">-->
      <%= render @items %>
      <!--</ol>-->
      <% else %>
      <br>
      <h4 style="text-align:center;">This user haven't post anything for sell</h4>
      <% end %>
      <!--outside right end-->
      </div>
      <!--row end-->
      </div>
      <!--item class end-->
      </ol>
</div>